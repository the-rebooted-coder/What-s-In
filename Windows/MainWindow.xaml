<Window
    x:Class="WhatsInApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource BrandCream}">

        <NavigationView x:Name="NavView" 
                        PaneDisplayMode="Left"
                        IsSettingsVisible="False"
                        IsPaneOpen="False" 
                        SelectionChanged="NavView_SelectionChanged"
                        Loaded="NavView_Loaded"
                        Background="{StaticResource BrandCream}">

            <NavigationView.MenuItems>
                <NavigationViewItem Content="Today" Tag="home" FontSize="15" Margin="0,5">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8BF;" FontFamily="Segoe MDL2 Assets"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Full Week" Tag="week" FontSize="15" Margin="0,5">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8C0;" FontFamily="Segoe MDL2 Assets"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15,20,15,40">
                <StackPanel Spacing="25">

                    <StackPanel Spacing="-5" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <TextBlock Text="WHAT'S" FontFamily="{StaticResource BlockFont}" FontSize="48" Foreground="Black" LineHeight="40" TextAlignment="Center"/>
                        <TextBlock Text="IN..." FontFamily="{StaticResource BlockFont}" FontSize="48" Foreground="Black" LineHeight="40" TextAlignment="Center"/>
                    </StackPanel>

                    <Grid x:Name="HomePanel">
                        <Border Background="Black" Margin="8,8,0,0" CornerRadius="0"/>

                        <Border Background="White" BorderBrush="Black" BorderThickness="4" Padding="25">
                            <StackPanel Spacing="15">
                                <Grid>
                                    <Border Background="Black" HorizontalAlignment="Left" Padding="10,5">
                                        <TextBlock Text="NOW SERVING" Foreground="White" FontFamily="{StaticResource CourierFont}" FontWeight="Bold" FontSize="12"/>
                                    </Border>
                                    <Button Click="Refresh_Click" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Padding="5" Margin="0,-5,-5,0">
                                        <SymbolIcon Symbol="Refresh" Foreground="Black"/>
                                    </Button>
                                </Grid>

                                <StackPanel Margin="0,5,0,0">
                                    <TextBlock x:Name="DayText" Text="LOADING..." FontFamily="{StaticResource BlockFont}" FontSize="36" Foreground="Black" LineHeight="35"/>
                                    <TextBlock x:Name="DateText" Text="..." FontFamily="{StaticResource CourierFont}" FontSize="16" FontWeight="Bold" Foreground="#666"/>
                                </StackPanel>

                                <Rectangle Stroke="Black" StrokeThickness="3" StrokeDashArray="4,2" Height="2" Margin="0,5"/>

                                <TextBlock x:Name="MealType" Text="..." FontFamily="{StaticResource BlockFont}" FontSize="56" Foreground="{StaticResource BrandCoral}" Margin="0,-10,0,-10"/>
                                <TextBlock x:Name="FoodItems" Text="Fetching menu..." FontFamily="{StaticResource CourierFont}" FontSize="18" FontWeight="Bold" TextWrapping="Wrap" LineHeight="24" Margin="0,0,0,15" Foreground="Black"/>

                                <Grid>
                                    <Rectangle Stroke="Black" StrokeThickness="3" StrokeDashArray="4,2" Height="2" VerticalAlignment="Top"/>
                                    <Grid Background="{StaticResource BrandYellow}" Margin="-25,15,-25,-25" Padding="25,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel VerticalAlignment="Center" Margin="0,0,15,0">
                                            <TextBlock Text="NEXT UP" FontFamily="{StaticResource BlockFont}" FontSize="12" Foreground="Black"/>
                                            <TextBlock x:Name="NextMealType" Text="DINNER" FontFamily="{StaticResource BlockFont}" FontSize="20" Foreground="Black"/>
                                        </StackPanel>
                                        <TextBlock x:Name="NextFoodItems" Grid.Column="1" Text="..." FontFamily="{StaticResource CourierFont}" FontSize="14" FontWeight="Bold" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="Black"/>
                                    </Grid>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <StackPanel x:Name="WeekPanel" Visibility="Collapsed" Spacing="20">
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </NavigationView>
    </Grid>
</Window>